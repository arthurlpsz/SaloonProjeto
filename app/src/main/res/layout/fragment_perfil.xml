<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".fragments.PerfilFragment">

    <TextView
        android:id="@+id/txv_saloes_disponiveis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Meu Perfil"
        android:textColor="@color/azul_petroleo"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/default_user"
        app:civ_border_color="@color/azul_petroleo"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_saloes_disponiveis" />

    <TextView
        android:id="@+id/txv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nome do UsuÃ¡rio"
        android:textColor="@color/azul_petroleo"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25547445" />

    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/email"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/txv_nome" />

    <TextView
        android:id="@+id/txv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="usuario@email.com"
        android:textColor="@color/preto"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_email"
        app:layout_constraintStart_toEndOf="@+id/icon_email"
        app:layout_constraintTop_toTopOf="@+id/icon_email" />

    <ImageView
        android:id="@+id/icon_telefone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/telefone"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/icon_email" />

    <TextView
        android:id="@+id/txv_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="(XX) XXXXX-XXXX"
        android:textColor="@color/preto"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_telefone"
        app:layout_constraintStart_toEndOf="@+id/icon_telefone"
        app:layout_constraintTop_toTopOf="@+id/icon_telefone" />

    <ImageView
        android:id="@+id/icon_endereco"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/endereco"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/icon_telefone" />

    <TextView
        android:id="@+id/txv_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Rua Exemplo, 123"
        android:textColor="@color/preto"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_endereco"
        app:layout_constraintStart_toEndOf="@+id/icon_endereco"
        app:layout_constraintTop_toTopOf="@+id/icon_endereco" />

    <Button
        android:id="@+id/btn_editar_perfil"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/dourado"
        android:text="@string/editar_perfil"
        android:textColor="@color/branco"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_endereco" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/borda_dourada"
        android:text="@string/sair"
        android:textAllCaps="false"
        android:textColor="@color/dourado"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_editar_perfil" />

</androidx.constraintlayout.widget.ConstraintLayout>