<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/branco"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="22dp">

        <ImageView
            android:id="@+id/empty_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/calendario"
            android:contentDescription="Ícone de nenhum agendamento encontrado" />

        <TextView
            android:id="@+id/empty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Você não possui um agendamento ativo."
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/empty_sub_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Quando houver, ele será exibido aqui."
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@color/cinza" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
