<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".fragments.SalaoHorariosFragment">

    <TextView
        android:id="@+id/txv_saloes_disponiveis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definir Hor치rio de Funcionamento"
        android:textColor="@color/petrol_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/open_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hor치rio de Abertura"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txv_saloes_disponiveis"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_open_time"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/petrol_blue"
        android:text="Selecionar"
        android:background="@drawable/rounded_gold_border"
        app:layout_constraintTop_toBottomOf="@id/open_time_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/close_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hor치rio de Fechamento"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_open_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_close_time"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/petrol_blue"
        android:text="Selecionar"
        android:background="@drawable/rounded_gold_border"
        app:layout_constraintTop_toBottomOf="@id/close_time_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_salvar_horarios"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Salvar Hor치rios"
        android:textColor="@color/white"
        android:backgroundTint="@color/gold"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn_close_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
