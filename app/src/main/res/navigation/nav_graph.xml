<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <!-- =============================================================== -->
    <!--           TELA INICIAL (CLIENTE ou DONO DO SALÃO)               -->
    <!-- =============================================================== -->

    <fragment
        android:id="@+id/navigation_home"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.DashboardClienteFragment"
        android:label="Início"
        tools:layout="@layout/fragment_dashboard_cliente">

        <!-- Cliente acessa serviços de um salão -->
        <action
            android:id="@+id/action_home_to_salaoServicos"
            app:destination="@id/salaoServicosFragment" />

        <!-- Se for salão, redireciona -->
        <action
            android:id="@+id/action_home_to_salao_dashboard"
            app:destination="@id/salaoDashboardFragment"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>


    <!-- =============================================================== -->
    <!--                        AGENDAMENTOS                             -->
    <!-- =============================================================== -->

    <fragment
        android:id="@+id/navigation_agendamentos"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.MeusAgendamentosFragment"
        android:label="Agendamentos"
        tools:layout="@layout/fragment_meus_agendamentos" />


    <!-- =============================================================== -->
    <!--                            PERFIL                               -->
    <!-- =============================================================== -->

    <fragment
        android:id="@+id/navigation_perfil"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil">

        <action
            android:id="@+id/action_perfil_to_editar_perfil"
            app:destination="@id/editarPerfilFragment" />

    </fragment>

    <fragment
        android:id="@+id/editarPerfilFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.EditarPerfilFragment"
        android:label="Editar Perfil"
        tools:layout="@layout/fragment_editar_perfil" />


    <!-- =============================================================== -->
    <!--                        CLIENTE -> AGENDAR                       -->
    <!-- =============================================================== -->

    <fragment
        android:id="@+id/salaoServicosFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoServicosFragment"
        android:label="Serviços do Salão"
        tools:layout="@layout/fragment_salao_servicos">

        <argument android:name="salaoId" app:argType="string" />

        <action
            android:id="@+id/action_salaoServicosFragment_to_navigation_agendar"
            app:destination="@id/navigation_agendar" />

    </fragment>

    <fragment
        android:id="@+id/navigation_agendar"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.AgendarFragment"
        android:label="Agendar Serviço"
        tools:layout="@layout/fragment_agendar">

        <argument android:name="salaoId" app:argType="string" />
        <argument android:name="servicoId" app:argType="string" />

    </fragment>


    <!-- =============================================================== -->
    <!--                        DONO DO SALÃO                            -->
    <!-- =============================================================== -->

    <fragment
        android:id="@+id/salaoDashboardFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoDashboardFragment"
        android:label="Dashboard do Salão"
        tools:layout="@layout/fragment_dashboard_salao">

        <action
            android:id="@+id/action_salaoDashboard_to_addServico"
            app:destination="@id/salaoAdicionarServicoFragment" />

        <action
            android:id="@+id/action_salaoDashboard_to_editServico"
            app:destination="@id/salaoEditarServicoFragment" />

        <!-- NOVA ACTION: IR PARA DEFINIR HORÁRIOS -->
        <action
            android:id="@+id/action_salaoDashboard_to_definirHorario"
            app:destination="@id/salaoDefinirHorarioFragment" />

    </fragment>


    <fragment
        android:id="@+id/salaoAdicionarServicoFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoAdicionarServicoFragment"
        android:label="Adicionar Serviço"
        tools:layout="@layout/fragment_salao_adicionar_servico" />


    <fragment
        android:id="@+id/salaoEditarServicoFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoEditarServicoFragment"
        android:label="Editar Serviço"
        tools:layout="@layout/fragment_salao_editar_servico">

        <argument android:name="servicoId" app:argType="string" />

    </fragment>


    <!-- =============================================================== -->
    <!--                      NOVO: DEFINIR HORÁRIOS                     -->
    <!-- =============================================================== -->

    <fragment
        android:id="@+id/salaoDefinirHorarioFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoDefinirHorarioFragment"
        android:label="Horários do Salão"
        tools:layout="@layout/fragment_salao_definir_horario" />

</navigation>
