<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <!-- HOME / DASHBOARD CLIENTE -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.DashboardClienteFragment"
        android:label="Início"
        tools:layout="@layout/fragment_dashboard_cliente">

        <action
            android:id="@+id/action_home_to_agendamentos"
            app:destination="@id/navigation_agendamentos" />

        <action
            android:id="@+id/action_home_to_perfil"
            app:destination="@id/navigation_perfil" />

        <!-- NOVA ACTION: abrir serviços do salão -->
        <action
            android:id="@+id/action_dashboardCliente_to_salaoServicos"
            app:destination="@id/salaoServicosFragment" />
    </fragment>


    <!-- AGENDAMENTOS -->
    <fragment
        android:id="@+id/navigation_agendamentos"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.MeusAgendamentosFragment"
        android:label="Agendamentos"
        tools:layout="@layout/fragment_meus_agendamentos">

        <action
            android:id="@+id/action_agendamentos_to_home"
            app:destination="@id/navigation_home" />

        <action
            android:id="@+id/action_agendamentos_to_perfil"
            app:destination="@id/navigation_perfil" />
    </fragment>


    <!-- PERFIL -->
    <fragment
        android:id="@+id/navigation_perfil"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil">

        <action
            android:id="@+id/action_perfilFragment_to_editarPerfilFragment"
            app:destination="@id/navigation_editar_perfil" />

        <action
            android:id="@+id/action_perfil_to_home"
            app:destination="@id/navigation_home" />

        <action
            android:id="@+id/action_perfil_to_agendamentos"
            app:destination="@id/navigation_agendamentos" />
    </fragment>


    <!-- AGENDAR SERVIÇO -->
    <fragment
        android:id="@+id/navigation_agendar"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.AgendarFragment"
        android:label="Agendar"
        tools:layout="@layout/fragment_agendar">

        <action
            android:id="@+id/action_agendarFragment_to_dashboardClienteFragment"
            app:destination="@id/navigation_home" />
    </fragment>


    <!-- EDITAR PERFIL -->
    <fragment
        android:id="@+id/navigation_editar_perfil"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.EditarPerfilFragment"
        android:label="Editar Perfil"
        tools:layout="@layout/fragment_editar_perfil" />


    <!-- TELA DE SERVIÇOS DO SALÃO (CLIENTE) -->
    <fragment
        android:id="@+id/salaoServicosFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoServicosFragment"
        android:label="Serviços do Salão"
        tools:layout="@layout/fragment_salao_servicos">

        <argument
            android:name="salaoId"
            app:argType="string" />

        <!-- Para ir para agendar serviço -->
        <action
            android:id="@+id/action_salaoServicosFragment_to_navigation_agendar"
            app:destination="@id/navigation_agendar" />
    </fragment>

</navigation>
