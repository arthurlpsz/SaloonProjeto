            app:destination="@id/salaoDashboard" />
    </fragment>


    <!-- ===================== AGENDAMENTOS DO SALÃƒO ===================== -->

    <fragment
        android:id="@+id/salaoAgendamentosFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoAgendamentosFragment"
        android:label="Agendamentos"
        tools:layout="@layout/fragment_salao_agendamentos">

        <action
            android:id="@+id/action_agendamentos_to_dashboard"
            app:destination="@id/salaoDashboard" />

        <action
            android:id="@+id/action_agendamentos_to_perfil"
            app:destination="@id/perfilFragment" />

        <action
            android:id="@+id/action_agendamentos_to_salaoServicos"
            app:destination="@id/salaoServicosFragment" />
    </fragment>

</navigation>
