        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoServicosFragment"
        android:label="ServiÃ§os"
        tools:layout="@layout/fragment_salao_servicos">

        <argument
            android:name="salaoId"
            app:argType="string" />

        <action
            android:id="@+id/action_salaoServicos_to_agendar"
            app:destination="@id/navigation_agendar" />

        <action
            android:id="@+id/action_salaoServicos_to_dashboard_salao"
            app:destination="@id/salaoDashboard" />

        <action
            android:id="@+id/action_salaoServicos_to_perfil"
            app:destination="@id/perfilFragment" />

        <action
            android:id="@+id/action_salaoServicos_to_agendamentos"
            app:destination="@id/salaoAgendamentosFragment" />
    </fragment>


    <!-- ===================== AGENDAR SERVIÃ‡O ===================== -->

    <fragment
        android:id="@+id/navigation_agendar"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.AgendarFragment"
        android:label="Agendar"
        tools:layout="@layout/fragment_agendar">

        <argument
            android:name="salaoId"
            app:argType="string" />

        <action
            android:id="@+id/action_agendar_to_salaoServicos"
            app:destination="@id/salaoServicosFragment" />
    </fragment>


    <!-- ===================== PERFIL (CLIENTE ou SALÃƒO) ===================== -->

    <fragment
        android:id="@+id/perfilFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil">

        <action
            android:id="@+id/action_perfil_to_dashboard_cliente"
            app:destination="@id/dashboardClienteFragment" />

        <action
            android:id="@+id/action_perfil_to_dashboard_salao"
            app:destination="@id/salaoDashboard" />

        <action
            android:id="@+id/action_perfil_to_salaoServicos"
            app:destination="@id/salaoServicosFragment" />

        <action
            android:id="@+id/action_perfil_to_agendamentos"
            app:destination="@id/salaoAgendamentosFragment" />

        <!-- ðŸ”¥ ACTION FALTANTE (AGORA CORRIGIDA) -->
        <action
            android:id="@+id/action_perfilFragment_to_editarPerfilFragment"
            app:destination="@id/editarPerfilFragment" />
    </fragment>


    <!-- ===================== EDITAR PERFIL (NOVO, CORRIGIDO) ===================== -->

    <fragment
        android:id="@+id/editarPerfilFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.EditarPerfilFragment"
        android:label="Editar Perfil"
        tools:layout="@layout/fragment_editar_perfil" />


    <!-- ===================== DASHBOARD SALÃƒO ===================== -->

    <fragment
        android:id="@+id/salaoDashboard"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoDashboardFragment"
        android:label="Dashboard SalÃ£o"
