        <action
            android:id="@+id/action_salaoDashboard_to_adicionarServico"
            app:destination="@id/salaoAdicionarServicoFragment" />

        <action
            android:id="@+id/action_salaoDashboard_to_editarServico"
            app:destination="@id/salaoEditarServicoFragment" />

        <action
            android:id="@+id/action_salaoDashboard_to_perfil"
            app:destination="@id/perfilFragment" />

        <action
            android:id="@+id/action_salaoDashboard_to_agendamentos"
            app:destination="@id/salaoAgendamentosFragment" />

        <action
            android:id="@+id/action_salaoDashboard_to_salaoServicos"
            app:destination="@id/salaoServicosFragment" />
    </fragment>


    <!-- ===================== ADICIONAR SERVIÃ‡O ===================== -->

    <fragment
        android:id="@+id/salaoAdicionarServicoFragment"
