<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_unificado"
    app:startDestination="@id/dashboardClienteFragment">

    <!-- ===================== DASHBOARD CLIENTE ===================== -->

    <fragment
        android:id="@+id/dashboardClienteFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.DashboardClienteFragment"
        android:label="Home"
        tools:layout="@layout/fragment_dashboard_cliente">

        <action
            android:id="@+id/action_home_to_salaoServicos"
            app:destination="@id/salaoServicosFragment" />

        <action
            android:id="@+id/action_home_to_perfil"
            app:destination="@id/perfilFragment" />
    </fragment>


    <!-- ===================== SERVIÃ‡OS DO SALÃƒO ===================== -->

