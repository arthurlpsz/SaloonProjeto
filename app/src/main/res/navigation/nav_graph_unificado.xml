    </fragment>


    <!-- ===================== EDITAR SERVIÃ‡O ===================== -->

    <fragment
        android:id="@+id/salaoEditarServicoFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.SalaoEditarServicoFragment"
        android:label="Editar ServiÃ§o"
        tools:layout="@layout/fragment_salao_editar_servico">

        <argument
            android:name="servicoId"
            app:argType="string" />

        <action
            android:id="@+id/action_salaoEditarServico_to_dashboard"
            app:destination="@id/salaoDashboard" />
    </fragment>


    <!-- ===================== DEFINIR HORÃRIOS ===================== -->

    <fragment
        android:id="@+id/definirHorariosFragment"
        android:name="br.edu.fatecpg.saloonprojeto.fragments.DefinirHorariosFragment"
        android:label="HorÃ¡rios"
        tools:layout="@layout/fragment_definir_horarios">

        <action
